<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/notification_padding_top_bottom"
    android:paddingBottom="@dimen/notification_padding_top_bottom"
    android:paddingLeft="@dimen/notification_padding_left_right"
    android:paddingRight="@dimen/notification_padding_left_right">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView android:id="@+id/app_icon"
            android:layout_width="@dimen/notification_icon_size_app"
            android:layout_height="@dimen/notification_icon_size_app"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Info" />

        <TextView android:id="@+id/ip_address"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Info" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp" >

        <ImageView android:id="@+id/usb_connections_icon"
            android:visibility="gone"
            android:layout_width="@dimen/notification_icon_size_connected_type"
            android:layout_height="@dimen/notification_icon_size_connected_type"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/notification_usb_connections_count" />

        <TextView
            android:id="@+id/usb_connections_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif"
            android:text="@string/notification_default_connections_count"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
            android:textSize="14sp"
            android:textStyle="normal"
            android:visibility="gone" />

        <ImageView android:id="@+id/web_socket_connections_icon"
            android:visibility="gone"
            android:layout_width="@dimen/notification_icon_size_connected_type"
            android:layout_height="@dimen/notification_icon_size_connected_type"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/notification_web_socket_connections_count" />

        <TextView
            android:id="@+id/web_socket_connections_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif"
            android:text="@string/notification_default_connections_count"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
            android:textSize="14sp"
            android:textStyle="normal"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/serial_connections_icon"
            android:layout_width="@dimen/notification_icon_size_connected_type"
            android:layout_height="@dimen/notification_icon_size_connected_type"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:contentDescription="@string/pref_header_serial"
            android:visibility="gone" />

        <TextView
            android:id="@+id/serial_connections_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif"
            android:text="@string/notification_default_connections_count"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
            android:textSize="14sp"
            android:textStyle="normal"
            android:visibility="gone" />

        <ImageView android:id="@+id/bluetooth_connections_icon"
            android:visibility="gone"
            android:layout_width="@dimen/notification_icon_size_connected_type"
            android:layout_height="@dimen/notification_icon_size_connected_type"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/notification_bluetooth_connection_state" />

        <TextView
            android:id="@+id/bluetooth_connections_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif"
            android:text="@string/notification_default_connections_count"
            android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
            android:textSize="14sp"
            android:textStyle="normal"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>